.tab-button:
	#after: .button
	%background-none
	%box-shadow-none
	$border-colour: transparent

	&--hover:
		$border-colour: currentcolor

	&--active:
		#after: .tab-button

	&-underline:
		%absolute
		%bottom-0
		%left-50
		%translate-left-50
		%width-100
		%height-1
		scale: 0 1
		%background-currentcolour
		%transparent
		#transition: #{transition("scale")}, #{transition("opacity")}

		&--active:
			#after: .tab-button-underline
			scale: 1 1
			%opaque
			%transition-focus
