{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"noEmit": true,
		"target": "ES2022",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"paths": {
			"bungie-api-ts/*": ["./src/node_modules/bungie-api-ts/*"],
			"@deepsight.gg/utility/*": ["./src/utility/*"],
			"@deepsight.gg/enums": ["./static/manifest/Enums.d.ts"],
			"@deepsight.gg/interfaces": ["./static/manifest/Interfaces.d.ts"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.mts"
	]
}