{
	"compilerOptions": {
		"strict": true,
		"target": "ES2024",
		"lib": ["ES2024", "DOM", "DOM.Iterable", "ESNext.Iterator"],
		"moduleResolution": "node",
		"outFile": "../out/index.js",
		"module": "amd",
		"baseUrl": ".",
		"incremental": true,
		"esModuleInterop": true,
		"noImplicitOverride": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"allowJs": true,
		"skipLibCheck": true,
		"noErrorTruncation": true,
		"paths": {
			"*": [
				"./*",
			],
			"lang": ["./lang/index.d.ts"],
			"style": ["./style/index.d.ts"],
			"kitsui": ["./node_modules/kitsui/index.d.ts"],
			"kitsui/*": ["./node_modules/kitsui/*"],
			"conduit.deepsight.gg": ["./node_modules/conduit.deepsight.gg/index.d.ts"],
			"conduit.deepsight.gg/*": ["./node_modules/conduit.deepsight.gg/*"],
			"bungie-api-ts": ["./node_modules/bungie-api-ts/index.d.ts"],
			"bungie-api-ts/*": ["./node_modules/bungie-api-ts/*"],
		}
	},
	"include": [
		"bundle/amd.js",
		"**/*.ts"
	]
}