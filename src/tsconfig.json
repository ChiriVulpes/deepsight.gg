{
	"compilerOptions": {
		"strict": true,
		"target": "ES2021",
		"lib": ["ES2021", "DOM", "DOM.Iterable"],
		"moduleResolution": "node",
		"outFile": "../docs/index.js",
		"module": "AMD",
		"baseUrl": ".",
        "incremental": true,
        "noImplicitOverride": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
		"skipLibCheck": true,
		"noErrorTruncation": true,
		"paths": {
			"@deepsight.gg/interfaces": ["node_modules/deepsight.gg/Interfaces.d.ts"],
			"@deepsight.gg/plugs": ["node_modules/deepsight.gg/DeepsightPlugCategorisation.d.ts"],
			"@deepsight.gg/enums": ["node_modules/deepsight.gg/Enums.d.ts"]
		}
	}
}